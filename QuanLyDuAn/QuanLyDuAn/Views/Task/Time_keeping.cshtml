
@{
    ViewBag.Title = "Time_keeping";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list_da = ViewBag.list_da;
    var FirstShow = ViewBag.FirstShow;
}
@section Asignment{
    <script src="/Assets/js/Task.js"></script>
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Chấm công</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">

            <table id="table-worktimer" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th colspan="10" class="center">
                            <!-- form search advanced -->
                            <form class="form-inline" id="formSearch">
                                <div class="form-group">
                                    <label for="project">Chọn dự án:</label>
                                    <select class="form-control" id="choose_project" style="width:140px;">
                                        <option selected value="0">Tất cả</option>
                                        @foreach (var item in list_da)
                                        {
                                            <option value=@item.ID>@item.Ten</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="datefrom">Từ :</label>
                                    <input type="date" class="form-control" value=@DateTime.Today.ToString("yyyy-MM-dd") style="width:150px;">
                                </div>
                                <div class="form-group">
                                    <label for="dateto">Đến :</label>
                                    <input type="date" class="form-control" value=@DateTime.Today.ToString("yyyy-MM-dd") style="width:150px;">
                                </div>

                                <button type="submit" class="btn btn-primary btnSearch" id="btn_chamcong" style="float:right;">Chấm công</button>
                            </form>
                            <!--end form search advanced-->

                        </th>
                    </tr>
                    <tr id="tr_bynone">
                        <th>Mã NV</th>
                        <th>Họ tên</th>
                        <th>Mã dự án tham gia</th>
                        <th>Tên dự án</th>
                        <th>Số công</th>
                        <th>Tổng công</th>
                    </tr>
                    <tr id="tr_byproject">
                        @*<th>Mã NV</th>
                            <th>Họ tên</th>
                            <th>Công việc tham gia</th>
                            <th> Vai trò</th>
                            <th>Số công</th>
                            <th>Thành tiền</th>*@
                    </tr>
                </thead>
                <tbody>
                    @if(FirstShow.Count == 0) { <tr><td colspan="5">Không có dữ liệu hiển thị</td></tr> }
                    else
                    {
                        var prev_nv = 0;
                        foreach(var item in FirstShow)
                        {
                            <tr>
                                @if (item.MaNV != prev_nv)
                                {
                                    <td rowspan= @item.TongDA>@item.MaNV</td>
                                    <td rowspan=@item.TongDA>@item.Ten</td>
                                }
                                <td>@item.MaDA</td>
                                <td>@item.TenDA</td>
                                <td>@item.Cong</td>
                                <td>0</td>
                                @prev_nv = item.MANV;
                            </tr>
                        }

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
